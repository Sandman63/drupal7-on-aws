{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "IAM Policies, Roles and Instance profiles",
  "Resources": {
    "SelfConfiguringResourcePolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "SelfConfiguringResourcePolicy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "Stmt1449063803000",
              "Effect": "Allow",
              "Action": [
                  "ec2:CreateTags",
                  "ec2:DescribeTags"
              ],
              "Resource": [
                  "*"
              ]
            }
          ]
        },
        "Roles": [
          { "Ref": "IAMRoleForDrupalWebServer" }
        ]
      }
    },
    "WebServerSelfConfiguringPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "WebServerSelfConfiguringPolicy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "Stmt1449063803000",
              "Effect": "Allow",
              "Action": [
                  "s3:get*"
              ],
              "Resource": [
                  "arn:aws:s3:::karelbemelmans-running-drupal7-on-aws/2016-06-06/user-data/*"
              ]
            }
          ]
        },
        "Roles": [
          { "Ref": "IAMRoleForDrupalWebServer" }
        ]
      }
    },
    "IAMRoleForDrupalWebServer": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [ {
            "Effect": "Allow",
            "Principal": {
              "Service": [ "ec2.amazonaws.com" ]
            },
            "Action": [ "sts:AssumeRole" ]
          } ]
        },
        "Path": "/"
      }
    },
    "DrupalWebServerInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [
          {
            "Ref": "IAMRoleForDrupalWebServer"
          }
        ]
      }
    }
  }
}
